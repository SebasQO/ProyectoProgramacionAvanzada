@model ProyectoProgramacionAvanzada2024.Models.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Style.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/608e017a78.js" crossorigin="anonymous"></script>
</head>
<body>

    <h2>Dashboard</h2>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card zoom-in-out-box">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="fa-solid fa-users"></i>
                        </div>
                        <h5 class="card-title">Total Usuarios</h5>
                        <p class="card-text">@Model.TotalUsuarios</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card zoom-in-out-box">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="fa-solid fa-tag"></i>
                        </div>
                        <h5 class="card-title">Total Productos</h5>
                        <p class="card-text">@Model.TotalProductos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card zoom-in-out-box">
                    <div class="card-body">
                        <div class="card-icon">
                            <i class="fa-solid fa-clipboard-list"></i>
                        </div>
                        <h5 class="card-title">Total Pedidos Recientes</h5>
                        <p class="card-text">@Model.TotalPedidosRecientes</p>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-striped table-bordered mt-4">
            <thead>
                <tr>
                    <th>Código Pedido</th>
                    <th>Código Usuario</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pedido in Model.Pedidos)
                {
                    <tr>
                        <td>@pedido.CodigoPedido</td>
                        <td>@pedido.CodigoUsuario</td>
                        <td>@pedido.Fecha.ToShortDateString()</td>
                        <td>
                            <a href="@Url.Action("Detalles", "Pedido", new { id = pedido.CodigoPedido })">Ver Detalles</a>
                            @Html.ActionLink("Detalles", "Detalles", "Pedido", new { id = pedido.CodigoPedido }, new { @class = "btn btn-secondary" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
