
@model ProyectoProgramacionAvanzada2024.Models.HistorialCompra

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles de la Compra</title>
</head>
<body>
    <div class="container">
        <h2>Detalles de la Compra</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CodigoUsuario)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CodigoUsuario)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CodigoProducto)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CodigoProducto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FechaCompra)
            </dd>
        </dl>
        <div>
            @Html.ActionLink("Editar", "EditarCompra", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Volver a la Lista", "ListaCompras", null, new { @class = "btn btn-default" })
        </div>
    </div>
</body>
</html>
